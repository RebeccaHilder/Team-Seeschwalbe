## BIC
bic <- numeric(3)
T <- dim(data)[1]
bic[1] <- 2*mod.tort$minimum + log(T)*length(mod.tort$estimate)
bic[2] <- 2*mod_slick$minimum + log(T)*length(mod_slick$estimate)
bic[3] <- 2*mod_tts$minimum + log(T)*length(mod_tts$estimate)
bic
which.min(bic)


